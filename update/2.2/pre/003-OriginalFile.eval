# Upgrade OriginalFile semantic type

print "     \\_ OriginalFile ";

# Load in the existing OriginalFile ST, and its database table

my $st = $factory->
  findObject("OME::SemanticType",name => 'OriginalFile');
die "Could not find OriginalFile semantic type"
  unless defined $st;

my $dt = $factory->
  findObject("OME::DataTable",table_name => 'ORIGINAL_FILES');
die "Could not find ORIGINAL_FILES table"
  unless defined $dt;

my ($se,$dc);

# Create the FileID element

$dc = $factory->findObject("OME::DataTable::Column",
                           data_table => $dt,
                           column_name => 'FILE_ID');
unless (defined $dc) {
    $dc = $factory->
      newObject("OME::DataTable::Column",
                {
                 data_table  => $dt,
                 column_name => 'FILE_ID',
                 sql_type    => 'integer',
                });
    die "Could not create FILE_ID column"
      unless defined $dc;
}

$se = $factory->findObject("OME::SemanticType::Element",
                           semantic_type => $st,
                           name => 'FileID');
unless (defined $se) {
    $se = $factory->
      newObject("OME::SemanticType::Element",
                {
                 semantic_type => $st,
                 name          => 'FileID',
                 data_column   => $dc,
                });
    die "Could not create FileID element"
      unless defined $se;
}

# Force this ST to recreate its DBObject subclass.  (This ensures that
# the new elements are accessible by the remaining Perl code.)

$st->requireAttributeTypePackage(1);

# Have the databse delegate add the new columns to the database tables.

$delegate->addClassToDatabase($dbh,$dt->getDataTablePackage());

# Signal success

print BOLD, "[SUCCESS]", RESET, ".\n";
1;
