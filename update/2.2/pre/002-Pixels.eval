# Upgrade Pixels semantic type

print "     \\_ Pixels ";

# Load in the existing Pixels ST, and its database table

my $st = $factory->
  findObject("OME::SemanticType",name => 'Pixels');
die "Could not find Pixels semantic type"
  unless defined $st;

my $dt = $factory->
  findObject("OME::DataTable",table_name => 'IMAGE_PIXELS');
die "Could not find IMAGE_PIXELS table"
  unless defined $dt;

my ($se,$dc);

# Create the PixelsID element

$dc = $factory->findObject("OME::DataTable::Column",
                           data_table => $dt,
                           column_name => 'PIXELS_ID');
unless (defined $dc) {
    $dc = $factory->
      newObject("OME::DataTable::Column",
                {
                 data_table  => $dt,
                 column_name => 'PIXELS_ID',
                 sql_type    => 'integer',
                });
    die "Could not create PIXELS_ID column"
      unless defined $dc;
}

$se = $factory->findObject("OME::SemanticType::Element",
                           semantic_type => $st,
                           name => 'PixelsID');
unless (defined $se) {
    $se = $factory->
      newObject("OME::SemanticType::Element",
                {
                 semantic_type => $st,
                 name          => 'PixelsID',
                 data_column   => $dc,
                });
    die "Could not create PixelsID element"
      unless defined $se;
}

# Force this ST to recreate its DBObject subclass.  (This ensures that
# the new elements are accessible by the remaining Perl code.)

$st->requireAttributeTypePackage(1);

# Have the databse delegate add the new columns to the database tables.

$delegate->addClassToDatabase($dbh,$dt->getDataTablePackage());

# Signal success

print BOLD, "[SUCCESS]", RESET, ".\n";
1;
